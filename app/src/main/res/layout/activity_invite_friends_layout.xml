<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/common_bottom_line_background"
              android:layout_width="fill_parent" android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@+id/invite_friend_top" layout="@layout/common_back_font_top_layout"/>
    <TextView style="@style/common_line"/>
    <TextView android:layout_marginTop="25.0dip" style="@style/common_line"/>
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/invite_friends_addressBook_layout"
                        android:background="@drawable/common_list_click_selector" android:paddingLeft="12.0dip"
                        android:paddingTop="10.0dip" android:paddingRight="12.0dip" android:paddingBottom="10.0dip"
                        android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/invite_friends_addressBook"
                       android:background="@drawable/invite_friends_contact_icon" android:layout_width="36.0dip"
                       android:layout_height="36.0dip" android:layout_marginTop="3.0dip"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                          android:layout_toRightOf="@id/invite_friends_addressBook">
                <TextView android:textSize="16.0sp" android:textColor="@color/black" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:text="通讯录好友"/>
                <TextView android:textSize="14.0sp" android:textColor="@color/common_font_color"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="添加或邀请通讯录中好友"/>
            </LinearLayout>
            <ImageView android:background="@drawable/enter_icon" android:layout_width="wrap_content"
                       android:layout_height="wrap_content" android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:layout_marginLeft="12.0dip" style="@style/common_line"/>
        <RelativeLayout android:id="@+id/invite_friends_fromWeixin_layout"
                        android:background="@drawable/common_list_click_selector" android:paddingLeft="12.0dip"
                        android:paddingTop="10.0dip" android:paddingRight="12.0dip" android:paddingBottom="10.0dip"
                        android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/invite_friends_fromWeixin"
                       android:background="@drawable/invite_friends_weixin_icon" android:layout_width="36.0dip"
                       android:layout_height="36.0dip" android:layout_marginTop="3.0dip"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                          android:layout_toRightOf="@id/invite_friends_fromWeixin">
                <TextView android:textSize="16.0sp" android:textColor="@color/black" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:text="微信好友"/>
                <TextView android:textSize="14.0sp" android:textColor="@color/common_font_color"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="给微信好友发链接"/>
            </LinearLayout>
            <ImageView android:background="@drawable/enter_icon" android:layout_width="wrap_content"
                       android:layout_height="wrap_content" android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:layout_marginLeft="12.0dip" style="@style/common_line"/>
        <RelativeLayout android:id="@+id/invite_friends_fromQQ_layout"
                        android:background="@drawable/common_list_click_selector" android:paddingLeft="12.0dip"
                        android:paddingTop="10.0dip" android:paddingRight="12.0dip" android:paddingBottom="10.0dip"
                        android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/invite_friends_fromQQ" android:background="@drawable/invite_friends_qq_icon"
                       android:layout_width="36.0dip" android:layout_height="36.0dip"
                       android:layout_marginTop="3.0dip"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                          android:layout_toRightOf="@id/invite_friends_fromQQ">
                <TextView android:textSize="16.0sp" android:textColor="@color/black" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:text="QQ好友"/>
                <TextView android:textSize="14.0sp" android:textColor="@color/common_font_color"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="给QQ好友发送链接"/>
            </LinearLayout>
            <ImageView android:background="@drawable/enter_icon" android:layout_width="wrap_content"
                       android:layout_height="wrap_content" android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:layout_marginLeft="12.0dip" style="@style/common_line"/>
        <RelativeLayout android:id="@+id/invite_friends_fromWeibo_layout"
                        android:background="@drawable/common_list_click_selector" android:paddingLeft="12.0dip"
                        android:paddingTop="10.0dip" android:paddingRight="12.0dip" android:paddingBottom="10.0dip"
                        android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/add_friends_invite" android:background="@drawable/invite_friends_weibo_icon"
                       android:layout_width="36.0dip" android:layout_height="36.0dip"
                       android:layout_marginTop="3.0dip"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                          android:layout_toRightOf="@id/add_friends_invite">
                <TextView android:textSize="16.0sp" android:textColor="@color/black" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:text="微博好友"/>
                <TextView android:textSize="14.0sp" android:textColor="@color/common_font_color"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="将邀请链接分享到微博"/>
            </LinearLayout>
            <ImageView android:background="@drawable/enter_icon" android:layout_width="wrap_content"
                       android:layout_height="wrap_content" android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView style="@style/common_line"/>
    </LinearLayout>
</LinearLayout>