                    android:layout_height="50.0dip">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/consume_time_before"
                      android:layout_width="40.0dip" android:layout_height="fill_parent">
            <ImageView android:background="@drawable/back_icon" android:layout_width="wrap_content"
                       android:layout_height="wrap_content" android:layout_centerVertical="true"/>
