    <TextView style="@style/common_line"/>
    <com.oldfriends.app.view.CalendarView android:layout_gravity="center_horizontal" android:id="@+id/customCalendar"
                                          android:paddingTop="5.0dip" android:paddingBottom="5.0dip"
                                          android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>