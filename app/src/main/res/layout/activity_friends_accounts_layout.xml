<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <include android:id="@+id/friends_accounts_top_layout" layout="@layout/common_back_font_top_layout"/>

    <TextView style="@style/common_line"/>

    <LinearLayout
            android:orientation="horizontal"
            android:background="@color/common_bottom_line_background"
            android:paddingLeft="12.0dip"
            android:paddingTop="12.0dip"
            android:paddingBottom="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:textSize="16.0sp"
                android:textColor="@color/common_font_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择我要与"/>

        <TextView
                android:textSize="16.0sp"
                android:textColor="@color/common_font_color"
                android:id="@+id/friends_accounts_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SADOYO"/>

        <TextView
                android:textSize="16.0sp"
                android:textColor="@color/common_font_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结算的人民币群组"/>
    </LinearLayout>

    <TextView style="@style/common_line"/>

    <ListView
            android:id="@+id/friends_accounts_list"
            android:background="@color/common_bottom_line_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:listSelector="@color/transparent"/>
</LinearLayout>