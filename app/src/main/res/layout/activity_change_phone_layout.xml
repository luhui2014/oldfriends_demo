<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/common_bottom_line_background"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <include android:id="@+id/user_changePhone_top" layout="@layout/common_back_font_top_layout"/>

    <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingLeft="12.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip">

        <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/black"
                    android:layout_width="70.0dip"
                    android:layout_height="wrap_content"
                    android:text="用户名"/>

            <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/common_font_color"
                    android:id="@+id/user_changePhone_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试用户名"/>

        </LinearLayout>

        <TextView
                android:background="@color/common_line_color"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"/>

        <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="8.0dip"
                android:paddingBottom="8.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/black"
                    android:layout_width="70.0dip"
                    android:layout_height="wrap_content"
                    android:text="密码"/>

            <EditText
                    android:textSize="16.0sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/common_font_color"
                    android:id="@+id/user_changePhone_password"
                    android:background="@null"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入密码"
                    android:inputType="textPassword"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingLeft="12.0dip"
            android:paddingRight="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip">

        <RelativeLayout
                android:id="@+id/user_changePhone_country_layout"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/black"
                    android:id="@+id/user_changePhone_country"
                    android:layout_width="70.0dip"
                    android:layout_height="wrap_content"
                    android:text="国家"/>

            <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/common_font_color"
                    android:id="@+id/user_changePhone_phoneNumber_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中国 +86"
                    android:layout_toRightOf="@id/user_changePhone_country"/>

            <ImageView
                    android:background="@drawable/enter_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView android:background="#ffdadada" android:layout_width="fill_parent" android:layout_height="1.0dip"/>

        <RelativeLayout
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/black"
                    android:id="@+id/user_changePhone_phone_text"
                    android:layout_width="70.0dip"
                    android:layout_height="wrap_content"
                    android:text="手机号"/>

            <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/common_text_click_color"
                    android:id="@+id/user_changePhone_phoneNumber_message"
                    android:paddingTop="3.0dip"
                    android:paddingBottom="3.0dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="短信验证码"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            <EditText
                    android:textSize="16.0sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/common_font_color"
                    android:id="@+id/user_changePhone_phoneNumber_edit"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入你的手机号"
                    android:maxLength="11"
                    android:layout_toLeftOf="@id/user_changePhone_phoneNumber_message"
                    android:layout_toRightOf="@id/user_changePhone_phone_text"
                    android:inputType="number"/>
        </RelativeLayout>

        <TextView android:background="#ffdadada" android:layout_width="fill_parent" android:layout_height="1.0dip"/>

        <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="10.0dip"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/black"
                    android:id="@+id/user_changePhone_phone_verification_text"
                    android:layout_width="70.0dip"
                    android:layout_height="wrap_content"
                    android:text="验证码"/>

            <EditText
                    android:textSize="16.0sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/common_font_color"
                    android:id="@+id/user_changePhone_verification_edit"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入您收到的验证码"
                    android:maxLength="4"
                    android:inputType="number"/>
        </LinearLayout>

        <TextView android:background="#ffdadada" android:layout_width="fill_parent" android:layout_height="1.0dip"/>
    </LinearLayout>
</LinearLayout>