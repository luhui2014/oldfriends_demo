<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@+id/contact_top_layout" layout="@layout/common_back_font_top_layout"/>
    <LinearLayout android:orientation="vertical" android:background="#ffececec" android:paddingLeft="15.0dip"
                  android:paddingRight="15.0dip" android:focusable="true" android:focusableInTouchMode="true"
                  android:layout_width="fill_parent" android:layout_height="wrap_content">
