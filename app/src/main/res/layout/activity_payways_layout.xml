<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/common_bottom_line_background"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <include android:id="@+id/pay_way_top_layout" layout="@layout/common_top_layout"/>

    <TextView style="@style/common_line"/>

    <TextView android:layout_marginTop="15.0dip" style="@style/common_line"/>

    <RelativeLayout
            android:id="@+id/pay_way_offLine_layout"
            android:background="@drawable/common_list_click_selector"
            android:padding="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/pay_way_offLine_image"
                android:background="@drawable/pay_way_offline"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_centerVertical="true"/>

        <ImageView
                android:id="@+id/pay_way_offLine_enter"
                android:background="@drawable/enter_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_toLeftOf="@id/pay_way_offLine_enter"
                android:layout_toRightOf="@id/pay_way_offLine_image"
                android:layout_centerVertical="true">

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="20.0sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="线下支付"/>

                <TextView
                        android:textSize="14.0sp"
                        android:textColor="@color/common_font_color"
                        android:id="@+id/pay_way_offLine_payState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textSize="14.0sp"
                        android:textColor="@color/common_font_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="向好友支付现金等进行结算"/>

                <TextView
                        android:textSize="16.0sp"
                        android:textColor="@color/common_font_color"
                        android:id="@+id/pay_way_offLine_payMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥1235"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView style="@style/common_line"/>

    <TextView android:layout_marginTop="20.0dip" style="@style/common_line"/>

    <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/pay_way_weixin_layout"

                android:background="@drawable/common_list_click_selector"

                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/pay_way_weixin_image"
                    android:background="@drawable/pay_way_weixin"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:id="@+id/pay_way_weixin_enter"
                    android:background="@drawable/enter_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_toLeftOf="@id/pay_way_weixin_enter"
                    android:layout_toRightOf="@id/pay_way_weixin_image"
                    android:layout_centerVertical="true">

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:textSize="20.0sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="微信钱包支付"/>

                    <TextView
                            android:textSize="14.0sp"
                            android:textColor="@color/common_font_color"
                            android:id="@+id/pay_way_weixin_payState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:textSize="14.0sp"
                            android:textColor="@color/common_font_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="向好友支付现金等进行结算"/>

                    <TextView
                            android:textSize="16.0sp"
                            android:textColor="@color/common_font_color"
                            android:id="@+id/pay_way_weixin_payMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥1235"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <TextView android:layout_marginLeft="10.0dip" style="@style/common_line"/>

        <RelativeLayout
                android:id="@+id/pay_way_qq_layout"
                android:background="@drawable/common_list_click_selector"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/pay_way_qq_image"
                    android:background="@drawable/pay_way_qq"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:id="@+id/pay_way_qq_enter"
                    android:background="@drawable/enter_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_toLeftOf="@id/pay_way_qq_enter"
                    android:layout_toRightOf="@id/pay_way_qq_image"
                    android:layout_centerVertical="true">

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:textSize="20.0sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="QQ钱包支付"/>

                    <TextView android:textSize="14.0sp"
                              android:textColor="@color/common_font_color"
                              android:id="@+id/pay_way_qq_payState"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="支付"
                              android:layout_alignParentRight="true"
                              android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:textSize="14.0sp"
                            android:textColor="@color/common_font_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="向好友支付现金等进行结算"/>

                    <TextView
                            android:textSize="16.0sp"
                            android:textColor="@color/common_font_color"
                            android:id="@+id/pay_way_qq_payMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥1235"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView android:layout_marginLeft="10.0dip" style="@style/common_line"/>

        <RelativeLayout
                android:id="@+id/pay_way_zfb_layout"
                android:background="@drawable/common_list_click_selector"
                android:padding="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/pay_way_zfb_image"
                    android:background="@drawable/pay_way_zhifubao"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:layout_centerVertical="true"/>

            <ImageView
                    android:id="@+id/pay_way_zfb_enter"
                    android:background="@drawable/enter_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="8.0dip"
                    android:layout_toLeftOf="@id/pay_way_zfb_enter"
                    android:layout_toRightOf="@id/pay_way_zfb_image"
                    android:layout_centerVertical="true">

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <TextView android:textSize="20.0sp"
                              android:textColor="@color/black"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="支付宝支付"/>

                    <TextView
                            android:textSize="14.0sp"
                            android:textColor="@color/common_font_color"
                            android:id="@+id/pay_way_zfb_payState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:textSize="14.0sp"
                            android:textColor="@color/common_font_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="向好友支付现金等进行结算"/>

                    <TextView android:textSize="16.0sp"
                              android:textColor="@color/common_font_color"
                              android:id="@+id/pay_way_zfb_payMoney"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="￥1235"
                              android:layout_alignParentRight="true"
                              android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <TextView style="@style/common_line"/>
</LinearLayout>