<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/app_start_bg" android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@+id/app_logo" android:background="@drawable/app_logo" android:layout_width="120.0dip"
               android:layout_height="150.0dip" android:layout_marginTop="80.0dip"
               android:layout_centerHorizontal="true"/>
    <LinearLayout android:gravity="bottom" android:orientation="vertical" android:id="@+id/app_start_login_layout"
                  android:focusable="true" android:focusableInTouchMode="true" android:layout_width="280.0dip"
                  android:layout_height="wrap_content" android:layout_marginTop="75.0dip"
                  android:layout_below="@id/app_logo" android:layout_centerHorizontal="true">
        <LinearLayout android:orientation="vertical" android:id="@+id/app_start_loginForget_layout"
                      android:background="@color/white" android:padding="10.0dip" android:layout_width="fill_parent"
                      android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                          android:layout_height="wrap_content">
                <ImageView android:background="@drawable/start_name_icon" android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>
                <EditText android:textSize="18.0sp" android:id="@+id/app_star_phoneNumber" android:background="@null"
                          android:paddingBottom="3.0dip" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:hint="手机号"
                          android:singleLine="true"/>
            </LinearLayout>
            <TextView android:layout_width="fill_parent" android:layout_marginTop="8.0dip"
                      android:layout_marginBottom="8.0dip" style="@style/common_line"/>
            <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageView android:id="@+id/start_password_icon" android:background="@drawable/start_password_icon"
                           android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <ImageView android:id="@+id/start_forget_icon" android:background="@drawable/start_forget_password_icon"
                           android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:layout_alignParentRight="true"/>
                <EditText android:textSize="18.0sp" android:id="@+id/app_star_password" android:background="@null"
                          android:paddingBottom="3.0dip" android:layout_width="fill_parent"
                          android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:hint="密码"
                          android:singleLine="true" android:layout_toLeftOf="@id/start_forget_icon"
                          android:layout_toRightOf="@id/start_password_icon"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal"
                      android:id="@+id/app_start_loginRegister_layout" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:layout_marginTop="10.0dip">
            <TextView android:textSize="20.0sp" android:textColor="@color/white" android:id="@+id/start_login_btn"
                      android:padding="10.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="登录"/>
            <TextView android:background="@color/white" android:layout_width="1.0dip" android:layout_height="20.0dip"
                      android:layout_marginLeft="35.0dip" android:layout_marginTop="-3.0dip"
                      android:layout_marginRight="35.0dip"/>
            <TextView android:textSize="20.0sp" android:textColor="@color/white" android:id="@+id/start_regist_btn"
                      android:padding="10.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="注册"/>
        </LinearLayout>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal"
                      android:id="@+id/app_start_otherWays_login_layout" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:layout_marginTop="50.0dip">
            <ImageView android:background="@drawable/login_weixin" android:layout_width="51.0dip"
                       android:layout_height="51.0dip"/>
            <ImageView android:background="@drawable/login_qq" android:layout_width="51.0dip"
                       android:layout_height="51.0dip" android:layout_marginLeft="15.0dip"
                       android:layout_marginRight="15.0dip"/>
            <ImageView android:background="@drawable/login_sina" android:layout_width="51.0dip"
                       android:layout_height="51.0dip"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>