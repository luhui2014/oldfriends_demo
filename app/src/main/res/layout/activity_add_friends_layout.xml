<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/common_bottom_line_background"
              android:layout_width="fill_parent" android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@+id/add_friends_top_layout" layout="@layout/common_top_layout"/>
    <TextView style="@style/common_line"/>
    <TextView android:layout_marginTop="15.0dip" style="@style/common_line"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/add_friends_edit_layout"
                  android:background="#ffffffff" android:paddingTop="6.0dip" android:paddingBottom="6.0dip"
                  android:focusable="true" android:focusableInTouchMode="true" android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <ImageView android:background="@drawable/choosecity_search_icon_hover" android:layout_width="wrap_content"
                   android:layout_height="wrap_content" android:layout_marginLeft="15.0dip"/>
        <EditText android:textSize="18.0sp" android:textColor="@color/black" android:id="@+id/add_friends_edit"
                  android:background="@null" android:paddingTop="5.0dip" android:paddingBottom="5.0dip"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_marginLeft="6.0dip" android:hint="用户名/手机号" android:singleLine="true"/>
    </LinearLayout>
    <TextView style="@style/common_line"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:layout_marginTop="10.0dip">
        <TextView android:textSize="16.0sp" android:textColor="@color/black" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="我的用户名:"/>
        <TextView android:textSize="16.0sp" android:textColor="@color/black" android:id="@+id/add_friends_userName"
                  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="测试用户"/>
        <ImageView android:background="@drawable/charge_setting_qr" android:layout_width="20.0dip"
                   android:layout_height="20.0dip" android:layout_marginLeft="8.0dip"/>
    </LinearLayout>
    <TextView android:layout_marginTop="20.0dip" style="@style/common_line"/>
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/add_friends_scan_layout"
                        android:background="@drawable/common_list_click_selector" android:paddingLeft="12.0dip"
                        android:paddingTop="8.0dip" android:paddingRight="12.0dip" android:paddingBottom="8.0dip"
                        android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/add_friends_scan" android:background="@drawable/add_friends_scan_icon"
                       android:layout_width="36.0dip" android:layout_height="36.0dip"
                       android:layout_marginTop="3.0dip"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                          android:layout_toRightOf="@id/add_friends_scan">
                <TextView android:textSize="16.0sp" android:textColor="@color/black" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:text="扫一扫"/>
                <TextView android:textSize="14.0sp" android:textColor="@color/common_font_color"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="扫描二维码添加好友"/>
            </LinearLayout>
            <ImageView android:background="@drawable/enter_icon" android:layout_width="wrap_content"
                       android:layout_height="wrap_content" android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:layout_marginLeft="12.0dip" style="@style/common_line"/>
        <RelativeLayout android:id="@+id/add_friends_addressBook_layout"
                        android:background="@drawable/common_list_click_selector" android:paddingLeft="12.0dip"
                        android:paddingTop="8.0dip" android:paddingRight="12.0dip" android:paddingBottom="8.0dip"
                        android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/add_friends_addressBook" android:background="@drawable/add_friends_contact_icon"
                       android:layout_width="36.0dip" android:layout_height="36.0dip"
                       android:layout_marginTop="3.0dip"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                          android:layout_toRightOf="@id/add_friends_addressBook">
                <TextView android:textSize="16.0sp" android:textColor="@color/black" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:text="通讯录好友"/>
                <TextView android:textSize="14.0sp" android:textColor="@color/common_font_color"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="添加或邀请通讯录中好友"/>
            </LinearLayout>
            <ImageView android:background="@drawable/enter_icon" android:layout_width="wrap_content"
                       android:layout_height="wrap_content" android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:layout_marginLeft="12.0dip" style="@style/common_line"/>
        <RelativeLayout android:id="@+id/add_friends_create_charge_layout"
                        android:background="@drawable/common_list_click_selector" android:paddingLeft="12.0dip"
                        android:paddingTop="8.0dip" android:paddingRight="12.0dip" android:paddingBottom="8.0dip"
                        android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/add_friends_create_charge" android:background="@drawable/export_bill_weixin"
                       android:layout_width="36.0dip" android:layout_height="36.0dip"
                       android:layout_marginTop="3.0dip"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                          android:layout_toRightOf="@id/add_friends_create_charge">
                <TextView android:textSize="16.0sp" android:textColor="@color/black" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:text="微信好友"/>
                <TextView android:textSize="14.0sp" android:textColor="@color/common_font_color"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="给微信朋友发送邀请链接"/>
            </LinearLayout>
            <ImageView android:background="@drawable/enter_icon" android:layout_width="wrap_content"
                       android:layout_height="wrap_content" android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"/>
        </RelativeLayout>
        <TextView android:layout_marginLeft="12.0dip" style="@style/common_line"/>
        <RelativeLayout android:id="@+id/add_friends_invite_layout"
                        android:background="@drawable/common_list_click_selector" android:paddingLeft="12.0dip"
                        android:paddingTop="8.0dip" android:paddingRight="12.0dip" android:paddingBottom="8.0dip"
                        android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/add_friends_invite" android:background="@drawable/export_bill_qq"
                       android:layout_width="36.0dip" android:layout_height="36.0dip"
                       android:layout_marginTop="3.0dip"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
                          android:layout_toRightOf="@id/add_friends_invite">
                <TextView android:textSize="16.0sp" android:textColor="@color/black" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:text="QQ好友"/>
                <TextView android:textSize="14.0sp" android:textColor="@color/common_font_color"
                          android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="给QQ朋友发送邀请链接"/>
            </LinearLayout>
            <ImageView android:background="@drawable/enter_icon" android:layout_width="wrap_content"
                       android:layout_height="wrap_content" android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView style="@style/common_line"/>
</LinearLayout>